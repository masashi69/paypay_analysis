
WindowManager:
    Main:
    Analized:

<Main>:
    name: 'main'
    id: main

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'exit'
            on_press: app.stop()
            size: 75, 50
            size_hint: None, None
        Label:
            text: 'PayPay明細描画ツール'
            id: label
            size_hint_y: 0.1
        #Button:
        #    text: 'Select import file'
        #    on_release: main.open(fc.path, fc.selection)
        Button:
            text: '明細選択'
            on_release:
                main.createdb(main.open(fc.path, fc.selection))
                root.manager.current = 'analize'
            size_hint_y: 0.2
        FileChooserListView:
            id: fc
            path: '../ドキュメント/paypay/'
            filters: ['*.csv']
            #on_selection: main.selected(fc.selection)


<Analized>:
    name: 'analize'

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size: 75, 50
            size_hint: None, None
            orientation: 'horizontal'
            Button:
                text: '戻る'
                on_press: root.manager.current = 'main'
                size: 75, 50
                size_hint: None, None
            Button:
                text: 'exit'
                on_press: app.stop()
                size: 75, 50
                size_hint: None, None
        Label:
            text: ''
            id: result
        BoxLayout:
            id: plot


