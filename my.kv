
WindowManager:
    Main:
    Analized:

<Main>:
    name: 'main'
    id: main

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Top page'
            id: label
        Button:
            text: 'Select import file'
            on_release: main.open(fc.path, fc.selection)
        Button:
            text: 'Select table'
            on_release:
                main.createdb(main.open(fc.path, fc.selection))
                root.manager.current = 'analize'
        FileChooserListView:
            id: fc
            path: '../ドキュメント/paypay/'
            filters: ['*.csv']
            #on_selection: main.selected(fc.selection)


<Analized>:
    name: 'analize'

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: '戻る'
            on_press: root.manager.current = 'main'
            size: 75, 50
            size_hint: None, None
        Button:
            text: 'exit'
            on_press: app.stop()
            size: 75, 50
            size_hint: None, None
        Label:
            text: ''
            id: result
        BoxLayout:
            id: plot


